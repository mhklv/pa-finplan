<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.CheckBox?>



<fx:root xmlns:fx="http://javafx.com/fxml" type="javafx.scene.layout.VBox">
  <style>
    -fx-alignment: center;
    -fx-padding: 5;
    -fx-font-size: 1em;
  </style>
  <children>

    <HBox>

      <VBox.margin>
        <Insets top="0" bottom="30" left="0" right="0" />
      </VBox.margin>

      <style>
        -fx-alignment: baseline-left;
      </style>
      
      <Label text="Выберите предопределённый формат выгрузки: " />
      <ComboBox fx:id="exportFormatComboBox" />
    </HBox>

    <Label fx:id="messageLabel">
      <style>
        -fx-font-size: 2em;
        -fx-text-fill: green;
      </style>
      
      <VBox.margin>
        <Insets top="30" bottom="5" left="0" right="0" />
      </VBox.margin>
    </Label>

    <HBox>
      
      <style>
        -fx-alignment: baseline-left;
      </style>
      
      <Label text="Год начала планового периода: " />
      <ComboBox fx:id="firstYearComboBox">
        <VBox.margin>
          <Insets top="30" bottom="30" left="0" right="0" />
        </VBox.margin>
      </ComboBox>
    </HBox>

    <Button fx:id="exportButton" text="Выгрузить">
      <VBox.margin>
        <Insets top="0" bottom="0" left="0" right="30" />
      </VBox.margin>
    </Button>
    
  </children>
</fx:root>
